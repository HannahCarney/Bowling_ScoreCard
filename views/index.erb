        $(document).ready(function(){
          var game = new Game();
          $('#calculate').on('click', function() {
            var val1 = parseInt($('#frame1pins1').val());
            game.roll(val1)
            var val2 = parseInt($('#frame1pins2').val());
            game.roll(val2)
            game.score()
            $('#total1').text(game.totalPoints);
          });
        });
        
     
        
      
       

        

        
