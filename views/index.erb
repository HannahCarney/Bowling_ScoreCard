  <script type="text/javascript">
        function moveOnMax(field, nextFieldID){
          if (field.value == "X") {
              nextFieldID.disabled = true;
          }
          else if (field.value.length >= field.maxLength){
             nextFieldID.focus(); }
          }
        function strikeOrSpare(field) {
          if (field == "X") {
            field = Number(10)
            return field
          }
          else {
            field = Number(field)
            return field
          }
        }
          
